{{#link-to 'workshop' activity}}
  <div class="workshop workshop{{activity.person.second_name}}">

    {{gif-image imageUrl=activity.image type="homeActivity"}}

    <div class="name">
      <div class="w_name">
        {{activity.name}}
      </div>
      <div class="full_name">
        <span>Imparte: </span>
        <span class="f_name">{{activity.person.name}}</span>
        <span class="s_name">{{activity.person.second_name}}</span>
        <span class="speciality">{{activity.person.speciality}}</span>
      </div>

    </div>
  </div>
{{/link-to}}
