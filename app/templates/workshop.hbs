<section id="conferences" class="first">
  <article>
    <div class="pure-g">
      <div class="pure-u-1-24 pure-u-md-2-24"></div>
      <div class="pure-u-22-24 pure-u-md-20-24">
        <div class="name">
          {{ model.name }}
        </div>
        <div class="from">
          <span class="location">
            Imparte:
            {{ model.person.name }}
            {{ model.person.second_name }}
          </span>
          {{ model.person.speciality }}
        </div>
      </div>
      <div class="pure-u-1-24 pure-u-md-2-24"></div>

    </div>


    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-2-24"></div>
      <div class="pure-u-1 pure-u-md-20-24 profile">
        {{gif-image  imageUrl= model.person.image}}

        <div class="details">
          <div class="day">
            <span> DÃ­a </span>
            {{date model.dateTime 'day'}}
          </div>
          <div class="hour">
            <span> Horario </span>
            {{date model.dateTime 'time'}}
          </div>
          <div class="language">
            <span>Lenguaje</span>
            {{model.language}}
          </div>
          <div class="social">
            <div class="text">Compartir este evento</div>
            <div id="social-share">
              {{social-share}}
            </div>
          </div>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-24"></div>
    </div>

  </article>

  <article>
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-2-24"></div>
      <div class="pure-u-1-24 pure-u-md-1-24"></div>
      <div class="pure-u-22-24 pure-u-md-11-24">
        <h2>Acerca de</h2>
        <div class="biography">
          {{md model.person.biography}}
         <div id="social-links">
            {{social-links type='website' link=model.person.website}}
            {{social-links type='facebook' link=model.person.social.facebook}}
            {{social-links type='twitter' link=model.person.social.twitter}}
            {{social-links type='instagram' link=model.person.social.instagram}}
            
          </div>
        </div>

      <h2>Trabajo</h2>
      </div>

      <div class="pure-u-1-24 pure-u-md-9-24"></div>
      <div class="pure-u-1 pure-u-md-2-24"></div>
    </div>
  </article>
  <article class="work">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-2-24"></div>
      <div class="pure-u-1 pure-u-md-20-24">
        {{gif-image  imageUrl= model.person.workImage}}
      </div>
      <div class="pure-u-1 pure-u-md-2-24"></div>
    </div>
  </article>

  <article>
     <div class="redButton">
            {{mailtolink 'Solicitar boleto gratis' 'ixtapa@a.com.mx'}}
    </div> 
  </article>

  {{footer-button type='Calendar'  }}

</section>
