.personList
  font-size 0
  text-align center
  position relative
  top 200px
  transform translate3d(0px, 0px, 0px)
  margin-bottom 200px
  .ember-view
    display inline-block
    vertical-align top


.person
  position relative
  display inline-block
  &.person0
    right 10px
    .name
      bgPersonName('img/person0NameBg.png')
      width 180px
      height 180px
      .s_name
        padding-left 1em
  &.person1
    top 160px
    left 20px
    .name
      bgPersonName('img/person1NameBg.png')
      width 190px
      height 180px
      .s_name
        padding-left .8em
  &.person2
    right 20px
    .name
      bgPersonName('img/person2NameBg.png')
      width 174px
      height 180px
  &.person3
    top 220px
    left 10px
    .name
      bgPersonName('img/person3NameBg.png')
      width 200px
      height 170px
      .full_name
        div
          display inline-block
    .info
      width 70%
  &.person4
    .name
      bgPersonName('img/person4NameBg.png')
      width 180px
      height 270px
    .info
      width 90%
  &.person5
    top 290px
    left 40px
    .name
      bgPersonName('img/person5NameBg.png')
      width 177px
      height 184px
      .s_name
        padding-left .65em

  .name
    position absolute
    text-align left
    font-size 16px
    .full_name
      margin-top .4em
      text-transform uppercase
      font-family 'bebas'
      font-size 52px
      div
        line-height .8
  .info
    font-family 'InputMonoCompressed-Regular'
    font-size 15px
    text-transform uppercase
    margin-top 1.3em
    margin-left .6em
    .location:after
      content "///"

@media screen and (min-width: 768px)
  .person
    &.person0
      .name
        bottom 4%
        left -5%
    &.person1
      .name
        bottom 4%
        right -12%
    &.person2
      .name
        bottom 6%
        right 6%
    &.person3
      .name
        bottom 6.3%
        left 4%
    &.person4
      .name
        bottom 6%
        left -10%
    &.person5
      .name
        bottom 6%
        right 5%
@media screen and (max-width: 767px)
  .personList
    margin-bottom 100px
    top 0
    .ember-view
      displat block
      width 100%
  .person
    height 335px
    width 100%
    &.person0
      top 0
      left 0
      right 0
      background url('img/person0Bg-min.jpg') 0 bottom / cover
      .name
        left 2%
        bottom 4%

    &.person1
      top 0
      left 0
      right 0
      background url('img/person1Bg-min.jpg') 0 0 / cover
      .name
        right 2%
        bottom 4%
        
    &.person2
      top 0
      left 0
      right 0
      background url('img/person2Bg-min.jpg') center center/cover
      .name
        bottom 4%
        left 2%
    &.person3
      top 0
      left 0
      right 0
      background url('img/person3Bg-min.jpg') 0 0 / cover
      .name
        bottom 4%
        right 2% !important
    &.person4
      top 0
      left 0
      right 0
      background url('img/person4Bg-min.jpg') 0 0/cover
      .name
        bottom 4%
        left 2%
    &.person5
      top 0
      left 0
      right 0
      background url('img/person5Bg-min.jpg') 0 0 / cover
      .name
        bottom 4%
        right 2%
    .imContainer
      display none
