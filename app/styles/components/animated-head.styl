#index
  canvas
    display block
    margin 0 auto
@media screen and (min-width: 1500px)
  #index
    canvas
      position relative
      top -50px
      left 50px
@media screen and (max-width: 1024px)
  #index
    canvas
      top 150px
      position absolute


@media screen and (max-width: 768px)
  #index
    canvas
      transform scale(1.2, 1.2)
      top 0%
      left 10%
@media screen and (max-width: 568px)
  #index
    canvas
      transform scale(2, 2)
      top 5%
      left 10%
