.loaderContainer
  display none
  .VCenter
    width 100%
    height 100%
    position absolute
    background rgba(0,0,0,.4)
  .glitch
    text-align center
    font-size 3em
    font-family 'AVF'
    glitchEfect( infinite )
    &:after, &:before
      width 100%
      background transparent
    &:after
      text-shadow 3px 0 #C0F
    &:before
      text-shadow 4px 0 #ff0

  #loaderCanvas
    position absolute
