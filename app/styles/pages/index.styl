#index
  .head
    position absolute
    top 117px
    z-index 10
    [class^="icon-"], [class*=" icon-"]
      font-size 22em
    .date
      font-family 'bebas'
      text-transform uppercase
      font-weight 100
      letter-spacing 1px
      line-height 1
      .days
        position relative
        left -14px
        margin-top 30px
        font-size 75px
        display block
      .month
        font-family 'league'
        font-size 55px
        letter-spacing 2px
        color $yellow
    .location
      text-transform uppercase
      font-family 'league'
      letter-spacing 2px
      color $yellow
      font-size 22px
    .intro, .des
      margin-top 1em
      font-family 'InputMonoCompressed-Light'
      font-size 18px
      width 72%
    .des
      font-size 14px
      h1.title
        font-size 14px
        display inline
        color $yellow
  .conferencistas, .talleres
    h2
      font-family 'bebas'
      font-size 54px
      margin 1em 0
      padding 0.2em 2em
      background url('img/bgConferencias.png')
      background-size 100%
      background-repeat no-repeat
      background-position center
  .talleres
    h2
      background url('img/bgTalleres.png')
      padding 0.2em 1.3em
      background-size 100%
      background-repeat no-repeat
      background-position center

@media screen and (max-width: 1024px)
  #index
    canvas
      position absolute
    .head
      margin-bottom 11em
      position relative

@media screen and (max-width: 767px)
  #index
    .anomally
      padding-bottom 23%
    .conferencistas, .talleres
      h2
        text-align center
        font-size 40px
    .head
      padding-bottom 0
      [class^="icon-"], [class*=" icon-"]
        font-size 14em
      .date
        width 80%
        .days
          left 0
          &, .month
            font-size 55px
      .des
        width 100%
        text-align center
        h1.title
          display block
        .cap
          text-transform capitalize

@media screen and (max-width: 568px)
  #index
    .head
      .date
        .days, .month
          color white
          font-size 40px
      .location
        line-height 1
        font-size 42px
        .breakLine
          display block
