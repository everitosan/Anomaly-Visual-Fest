#index
  canvas
    background url('img/glitch.png'), url('img/head.png'), url('img/detailBgHead.png')
    background-size auto 100%, auto 100%, auto 100%
    background-position right center
    background-repeat no-repeat
    width 100%
    height 0
    padding-top 85%

  .head
    position absolute
    top 117px
    z-index 10
    [class^="icon-"], [class*=" icon-"]
      font-size 22em
    .date
      font-family 'bebas'
      text-transform uppercase
      font-weight 100
      letter-spacing 1px
      line-height 1
      .days
        position relative 
        left -14px
        margin-top 30px
        font-size 75px
        display block
      .month
        font-family 'league'
        font-size 55px
        letter-spacing 2px
        color $yellow
    .intro, .des
      margin-top 1em
      font-family 'InputMonoCompressed-Light'
      font-size 18px
      width 72%
    .des
      font-size 14px
      h1.title
        font-size 14px
        display inline
        color $yellow
  .conferencistas, .talleres
    h2
      font-family 'bebas'
      font-size 54px
      margin 0
      padding 0.2em 1.3em
      background url('img/bgConferencias.png')
      background-size 100%   
      background-repeat no-repeat
      background-position center
  .talleres
    h2
      background url('img/bgTalleres.png')
      background-size 100%   
      background-repeat no-repeat
      background-position center
  
@media screen and (max-width: 1024px)
  #index
    canvas
      background-size 100% auto, 100% auto, 100% auto
      position absolute
      top 20%
      padding-top 0
      height 80%
      background-position 25%
    .head
      margin-bottom 11em
      position relative     

@media screen and (max-width: 767px) 
  #index
    canvas
      background-size auto 100% , auto 100% , auto 100% 
      height 60%
      background-position 25% 
      top 16%
    .anomally
      padding-bottom 23%
    .conferencistas, .talleres
      h2
        text-align center
        font-size 40px
    .head
      padding-bottom 0
      [class^="icon-"], [class*=" icon-"]
        font-size 14em
      .date
        width 80%
        .days
          display inline
          left 0
          &, .month
            font-size 55px
      .des
        width 100%
        text-align center
        h1.title
          display block
        .cap
          text-transform capitalize  