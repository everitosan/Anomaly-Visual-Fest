#conferences
  background url('img/backgroundConferences.jpg')
  .name
    bgPerson('img/bgConferencias.png')
    font-family 'bebas'
    font-size 60px
  .from
    font-family 'InputMonoCompressed-Regular'
    font-size 13px
    text-transform uppercase
    .location
      &:after
        content "///"
        
  .profile
    position relative
    img
      width 80%
    .details
      position absolute
      top 0
      right 2.5%
      display flex
      flex-direction column
      justify-content center
      height 100%
      width 20%
      div
        padding 28px 0 10px 5px
        box-sizing border-box
        margin 5px 0
        &:not(span)
          font-family 'bebas'
          font-size 44px
        span
          font-family 'InputMonoCompressed-Regular'
          font-size 15px 
          text-transform uppercase
          display block
          line-height 0
      .day
        bgPersonName('img/dayBg.png')
        background-position left top
      .hour 
        bgPersonName('img/hourBg.png')
        background-position left top      
      .language 
        bgPersonName('img/languageBg.png')
        background-position left top
        font-size 17px
        height 31px
        padding-top 8px
        color $yellow
        span 
          display inline
          line-height 1
          color white
      .social
        bgPersonName('img/shareBg.png')
        background-position left top
        padding-top 5px
        height 53px
        .text
          width 30%
          font-family 'InputMonoCompressed-Regular'
          font-size 10px 
          text-transform uppercase
          display inline-block
          padding 0
          margin 0
          vertical-align middle
        span
          line-height 1
          display inline-block
          vertical-align middle
        [class^="icon-"], [class*=" icon-"]
          opacity .5
          margin 0 5px
          &:hover
            cursor pointer
            opacity 1
            



  h2
    bgH2Min('img/bgAcercaDe.png')
    font-family 'bebas'
    font-size 30px

    box-sizing border-box
    padding 10px 0px 10px 30px
    
  .biography
    margin-top 4em
    h3
      font-family 'InputMonoCompressed-Light'
      font-weight 100
      margin 1.5em 0
      font-size 25px
    p
      font-family 'InputMonoCompressed-Regular'
      font-size 14px
      
    .social, p, h3
      padding-left 30px
      box-sizing border-box
    .social
      margin 2em 0
      a
        text-transform uppercase
        font-family 'bebas'
        font-size 20px
        &:first-child
          margin-right .5em
          text-decoration underline
      [class^="icon-"], [class*=" icon-"]
        font-size 14px
        margin 0 1em
        color #5E958A
        &:hover
          color white